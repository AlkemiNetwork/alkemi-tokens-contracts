{
  "name": "alkemi-tokens-contracts",
  "version": "1.0.0",
  "description": "Ethereum smart contracts for Alkemi protocol ERC20 tokens",
  "dependencies": {
    "@openzeppelin/cli": "^2.5.3",
    "@openzeppelin/contracts-ethereum-package": "^2.3.0",
    "@openzeppelin/upgrades": "^2.5.3",
    "truffle": "^5.0.37"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.3",
    "bignumber.js": "^9.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "eth-gas-reporter": "^0.2.12",
    "ganache-cli": "^6.7.0",
    "prettier": "^1.18.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.34",
    "solidity-coverage": "^0.6.7"
  },
  "scripts": {
    "ganache": "ganache-cli --port 8545",
    "add-contract": "openzeppelin add",
    "compile": "openzeppelin compile",
    "deploy": "truffle deploy",
    "lint": "npm run prettier",
    "prettier": "prettier --write **/*.sol",
    "test": "ganache-cli --port 8545 > /dev/null & sleep 5 && truffle test",
    "test:alkemi-token": "ganache-cli --port 8545 > /dev/null & sleep 5 && truffle test ./test/AlkemiToken.js",
    "test:alkemi-prime": "ganache-cli --port 8545 > /dev/null & sleep 5 && truffle test ./test/AlkemiPrime.js",
    "coverage": "npx solidity-coverage",
    "script:ganache-cli": "./scripts/ganache-cli.sh"
  },
  "keywords": [
    "Alkemi"
  ],
  "author": "Haythem Sellami <haythem@alkemi.ai>",
  "license": "ISC"
}
